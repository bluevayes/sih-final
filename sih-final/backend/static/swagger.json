{
    "swagger": "2.0",
    "info": {
      "title": "Medical API",
      "version": "1.0",
      "description": "API for medical information"
    },
    "basePath": "/",
    "paths": {
      "/get_specialization": {
        "post": {
          "summary": "Get specialization based on symptoms",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Symptoms description",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "symptoms": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Specialization determined successfully",
              "schema": {
                "type": "object",
                "properties": {
                  "specialization": {
                    "type": "string"
                  }
                }
              }
            },
            "400": {
              "description": "Bad request"
            },
            "500": {
              "description": "Internal server error"
            }
          }
        }
      },
      "/get_doctors": {
        "post": {
          "summary": "Get doctors by specialization",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Specialization",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "specialization": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Doctors found successfully",
              "schema": {
                "type": "object",
                "properties": {
                  "doctors": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "ID": {
                          "type": "integer"
                        },
                        "Name": {
                          "type": "string"
                        },
                        "Specialization": {
                          "type": "string"
                        },
                        "Availability": {
                          "type": "string"
                        },
                        "Timings": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad request"
            },
            "404": {
              "description": "No doctors found"
            }
          }
        }
      }
    }
  }
  